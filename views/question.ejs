<%- include('partials/header'); -%>
<body>
  <%- include('partials/navbar'); -%>
  <div class="container mt-5">
    <% const {id, title, description} = question %>
    <h1>- <%= title %></h1>
    <p><%= description %></p>
    <form method="post" action="/response" class="d-flex flex-column mb-5">
      <input
        type="text"
        name="questionId"
        value="<%= id %>"
        class="mt-3 d-none"
      />
      <div class="form-group">
        <label for="body">Responda</label>
        <textarea
          class="form-control mt-3"
          rows="3"
          name="body"
          id="body"
          placeholder="Digite sua resposta!"
        ></textarea>
      </div>
      <button type="submit" class="btn btn-success col-2 mt-3">
        Responder
      </button>
    </form>

    <h1>Resposta</h1>
    <div class="card px-3 py-3">
      <% answers.forEach(({body, createdAt}) => { %>
      <p><%= body %></p>
      <small><%= new Date(createdAt).toLocaleDateString() %></small>
      <% }) %>
    </div>
  </div>
</body>
<%- include('partials/footer'); -%>
